extends layout

block content
  h1= title

  form(method="POST")
    .form-group
      label(for="name") Category:
      input#name(
        type="text",
        placeholder="River, Pond, Sea, etc.",
        name="name",
        required,
        value=undefined === category ? "" : category.name
      )
    .form-group
      label(for="description") Description:
      input#description(
        type="text",
        placeholder="Add description for this category.",
        name="description",
        required,
        value=undefined === category ? "" : category.description
      )
    button(type="submit") Submit

  if errors
    ul
      each error in errors
        li!= error.msg
