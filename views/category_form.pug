extends layout

block content

  h1= title

  form(method='POST')
    div.form-group
      label(for='name') Category:
      input#name(type='text', placeholder='River, Pond, Sea, etc.' name='name' required value=(undefined===category ? '' : category.name) )
    div.form-group
      label(for='description') Description:
      input#description(type='text', placeholder='Add description for this category.' name='description' required value=(undefined===category ? '' : category.description) )
    button(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg