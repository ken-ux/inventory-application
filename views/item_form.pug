extends layout

block content
  h1= title

  form(method='POST')
    div.form-group
      label(for='name') Name:
      input#name(type='text', placeholder='Name of item.' name='name' required value=(undefined===item ? '' : item.name) )
    div.form-group
      label(for='description') Description:
      textarea#description(placeholder='Add description for this item.' name='description' required)= undefined===item ? '' : item.description
    div.form-group
      label Categories:
      div
        for category in categories
          div(style='display: inline;')
            if category.checked
              input(type='checkbox', name='category', id=category._id, value=category._id, checked)
            else
              input(type='checkbox', name='category', id=category._id, value=category._id)
            label(for=category._id) &nbsp;#{category.name}
    div.form-group
      label(for='unit_price') Unit Price: $
      input#unit_price(type='number', min="0.01" step="0.01" placeholder='1.00' name='unit_price' value=(undefined===item ? '' : Number.parseFloat(item.unit_price).toFixed(2)) required)
    div.form-group
      label(for='stock') Stock:
      input#stock(type='number' min="0" placeholder='0' name='stock' value=(undefined===item ? '' : item.stock) required)
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg