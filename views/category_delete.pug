extends layout

block content
  h1 #{ title }: #{ category.name }
  p #[strong Description]: #{ category.description }

  if category_items.length
    p #[strong Delete the following items before attempting to delete this category.]
    div
      h2 Items
      dl
        each item in category_items
          dt
            a(href=item.url) #{ item.name }
          dd #[strong Description]: #{ item.description }
          dd #[strong Unit Price]: #{ item.unit_price }
          dd #[strong Stock]: #{ item.stock }

  else
    p Do you really want to delete this Category?

    form(method="POST")
      .form-group
        input#categoryid(type="hidden", name="categoryid", value=category._id)

      button(type="submit") Delete
