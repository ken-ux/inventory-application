extends layout

block content
  h1= title

  form(method="POST")
    .form-group
      label(for="name") Category:
      input#name(
        type="text",
        placeholder="Add name",
        name="name",
        required,
        value=undefined === category ? "" : category.name
      )
    .form-group
      label(for="description") Description:
      input#description(
        type="text",
        placeholder="Add description",
        name="description",
        required,
        value=undefined === category ? "" : category.description
      )
    button(type="submit") Submit

  if errors
    ul
      each error in errors
        li!= error.msg
